<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>mvn01</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>list</servlet-name>
  	<servlet-class>com.bit.day15.controller.ListController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>addform</servlet-name>
  	<servlet-class>com.bit.day15.controller.AddFormController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>add</servlet-name>
  	<servlet-class>com.bit.day15.controller.AddController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>detail</servlet-name>
  	<servlet-class>com.bit.day15.controller.OneController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>list</servlet-name>
  	<url-pattern>/list.bit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>addform</servlet-name>
  	<url-pattern>/add.bit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>add</servlet-name>
  	<url-pattern>/insert.bit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>detail</servlet-name>
  	<url-pattern>/detail.bit</url-pattern>
  </servlet-mapping>
  
</web-app>












